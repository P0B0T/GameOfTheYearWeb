<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameOfTheYearWeb.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
</head>
<body>

    <main>
        @RenderBody()
    </main>

    @await Html.PartialAsync("_Modal", new GameOfTheYearWeb.DataBase.Entity.Record())

    <footer class="footer">
        &copy; 2024 - GameOfTheYearWeb
    </footer>

    <script>
        window['gameMode'] = '@ViewBag.Mode';
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Game/food.js"></script>
    <script src="~/js/Game/player.js"></script>
    <script src="~/js/Game/gameBoard.js"></script>
    <script src="~/js/Game/game.js"></script>
    <script src="~/js/removeExtraSpaces.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
